{
  "name": "spring-initializr",
  "private": true,
  "description": "Start.spring.io",
  "version": "0.0.1",
  "author": "Spring",
  "keywords": [
    "spring",
    "initializr"
  ],
  "license": "Apache 2.0",
  "scripts": {
    "clean": "rimraf .cache",
    "prebuild": "yarn run clean && yarn run lint && yarn run test",
    "build": "gatsby build",
    "develop": "gatsby develop",
    "prestart": "yarn run clean",
    "start": "gatsby develop",
    "serve": "gatsby serve",
    "fix": "NODE_ENV=test import-sort --write '(src|utils|plugins)/**/*.js' && prettier --write '**/*.{{c,le,sc}ss,g?(raph)ql,htm?(l),js?(on|on5|onl|x|s),md?(x|wn),m?(ark)down,mkdn,ts?(x),vue,y?(a)ml}'",
    "lint": "NODE_ENV=test import-sort -l '(src|utils|plugins)/**/*.js' && prettier --check 'src/**/*.{{c,le,sc}ss,g?(raph)ql,htm?(l),js?(on|on5|onl|x|s),md?(x|wn),m?(ark)down,mkdn,ts?(x),vue,y?(a)ml}'",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\""
  },
  "dependencies": {
    "file-saver": "^2.0.1",
    "gatsby": "^2.3.2",
    "gatsby-image": "^2.0.35",
    "gatsby-plugin-google-analytics": "^2.0.19",
    "gatsby-plugin-manifest": "^2.0.24",
    "gatsby-plugin-offline": "^2.0.25",
    "gatsby-plugin-prefetch-google-fonts": "^1.4.1",
    "gatsby-plugin-react-helmet": "^3.0.11",
    "gatsby-plugin-sass": "^2.0.11",
    "gatsby-plugin-sharp": "^2.0.31",
    "gatsby-plugin-webpack-bundle-analyzer": "^1.0.4",
    "gatsby-source-filesystem": "^2.0.28",
    "gatsby-transformer-json": "^2.1.11",
    "gatsby-transformer-sharp": "^2.1.17",
    "js-search": "^1.4.2",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "node-sass": "^4.12.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-helmet": "^5.2.0",
    "react-hotkeys": "^2.0.0-pre5",
    "react-toastify": "^5.1.0",
    "styled-react-modal": "^1.2.1"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-babylon": "^6.0.0",
    "import-sort-style-renke": "^6.0.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "react-app",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "no-unused-vars": [
        "warn"
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "endOfLine": "lf",
    "tabWidth": 2,
    "semi": false,
    "printWidth": 80,
    "trailingComma": "es5",
    "singleQuote": true,
    "jsxSingleQuote": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  },
  "importSort": {
    ".js": {
      "parser": "babylon",
      "style": "renke"
    }
  },
  "on-save": {
    "**/*.js": "cross-env NODE_ENV=test import-sort --write",
    "**/*.{{c,le,sc}ss,g?(raph)ql,htm?(l),js?(on|on5|onl|x|s),md?(x|wn),m?(ark)down,mkdn,ts?(x),vue,y?(a)ml}": [
      "prettier --write"
    ]
  }
}
